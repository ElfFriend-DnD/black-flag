<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    {{> (lookup partials 'itemHeader') document=document allowsColor=false }}

    {{!-- Body --}}
    <section class="sheet-body">

        {{!-- Prequisite --}}
        <div class="form-group" data-name="system.prerequisite">
            <label>{{ localize "Prerequisite" }}</label>
            <input name="system.prerequisite" type="text" value="{{document.system.prerequisite}}" placeholder="Prerequisite"/>
        </div>

        {{!-- Description --}}
        <div class="form-group stacked" data-name="system.description">
            <label>{{ localize "Description" }}</label>
            {{editor descriptionHTML target="system.description" button=false editable=editable engine="prosemirror" collaborate=false}}
        </div>
    </section>

    <footer>
        <button type="submit">{{localize "Save"}}</button>
    </footer>
</form>
